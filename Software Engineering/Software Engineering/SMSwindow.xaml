<Window x:Class="Software_Engineering.SMSwindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Software_Engineering"
        mc:Ignorable="d"
        Title="SMSwindow" Height="450" Width="800">
    <Grid>
        <Label Content="SMS Message" HorizontalAlignment="Left" Margin="304,33,0,0" VerticalAlignment="Top" Height="34" Width="170" FontSize="18"/>
        <Label HorizontalAlignment="Left" Margin="117,122,0,0" VerticalAlignment="Top" Height="30" Width="131" FontSize="16" Content="Sender"/>
        <Label Content="Message text" HorizontalAlignment="Left" Margin="117,217,0,0" VerticalAlignment="Top" Height="30" Width="131" FontSize="16"/>
        <TextBox x:Name="sendernum" HorizontalAlignment="Left" Height="37" Margin="284,122,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="137" FontSize="16"/>
        <TextBox x:Name="smsmsg" HorizontalAlignment="Left" Height="109" Margin="284,217,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="236" FontSize="16"/>
        <Button x:Name="smssubmit" Content="Submit" HorizontalAlignment="Left" Height="43" Margin="304,354,0,0" VerticalAlignment="Top" Width="147" FontSize="16" Click="smssubmit_Click"/>

    </Grid>
</Window>
